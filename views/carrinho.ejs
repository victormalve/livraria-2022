        $('.bt-carrinho').click(function(){

    let dataid=$(this).attr('data-id')

    $.post("/delete-carrinho", //app.post
    {
    id:dataid,
    },
    function(data,status)
    {
    location.href='/carrinho' //app.get
    },'json')
    })
    })
</script>

